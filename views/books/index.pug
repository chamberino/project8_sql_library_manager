extends ../layout

block content
  div.container
    div.flex
      h1 Books
      p
      a.button(href='/books/new') Create New Book
    div
      form.search(method='GET' action='')
        div.form-group
          input.button(type='text', placeholder='EX: The Martian' name='search' value=undefined)
        button.button(type='submit') Search  
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books
        tr
          td 
            a(href="/books/" + book.id) #{book.title}
          td #{book.author}
          td #{book.genre}
          td #{book.year}

  if pages
  div.pagination  
    - for (var i = 0; i < pages; ++i) 
      a.button(href="/books/?page=" + (i+1)) #{i + 1}
      
     

